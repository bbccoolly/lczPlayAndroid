<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_main"
    app:startDestination="@id/view_pager_fragment">

    <fragment
        android:id="@+id/view_pager_fragment"
        android:name="com.lcz.pa.MainViewPagerFragment"
        android:label="MainViewPagerFragment" >
        <action
            android:id="@+id/action_view_pager_fragment_to_plant_detail_fragment"
            app:destination="@id/plant_detail_fragment" />
    </fragment>
    <fragment
        android:id="@+id/plant_detail_fragment"
        android:name="com.lcz.pa.ui.PlantDetailFragment"
        android:label="PlantDetailFragment" >
        <action
            android:id="@+id/action_plant_detail_fragment_to_gallery_fragment"
            app:destination="@id/gallery_fragment" />
    </fragment>
    <fragment
        android:id="@+id/gallery_fragment"
        android:name="com.lcz.pa.ui.GalleryFragment"
        android:label="GalleryFragment" />
</navigation>